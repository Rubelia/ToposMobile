<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.laptrinhmobile.toposmobile.ChoosePayment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#1E68AD"
        android:layout_marginBottom= "0.005dp"
        >

        <!-- style="@style/ActionBarCompat" -->


        <ImageView
            android:id="@+id/imgViewBack"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#1E68AD"
            android:paddingRight="5dip"
            android:scaleType="center"
            android:src="@drawable/backwhite"
            />


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1E68AD"
            android:gravity="center|center_vertical"
            android:text="@string/txt_view_title_choose_payment"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/listHinhThucThanhToan" />


</LinearLayout>
