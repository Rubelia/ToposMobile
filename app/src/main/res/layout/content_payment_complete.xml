<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.laptrinhmobile.toposmobile.PaymentComplete"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        >

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/icon_add_product"
            android:id="@+id/btnAddProduct" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:text="Ca1: "
            android:textColor="#FFFFFF"
            android:gravity="center_vertical|center"
            android:id="@+id/txtViewCashName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center|center_vertical"
            android:text=""
            android:textColor="#FFFFFF"
            android:id="@+id/txtViewStatus" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:background="@color/listView_bg"
        android:layout_weight="0.70" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <TextView
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_vertical|center"
            android:text="In Bill"
            android:id="@+id/txtViewPrint" />

        <TextView
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_vertical|center"
            android:text="Email Receipt"
            android:id="@+id/txtViewEmailReceipt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_vertical|center"
            android:text="Giao dịch mới"
            android:id="@+id/txtViewNewTransaction" />
    </LinearLayout>


</LinearLayout>
