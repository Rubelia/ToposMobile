<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".PinEntryView" >

    <TextView
        android:id="@+id/titleBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Enter PIN"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:padding="10dip"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/pinBox0"
                style="@style/pinbox_password"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/pinBox1"
                style="@style/pinbox_password" />
            <TextView
                style="@style/pinbox_password"
                android:id="@+id/pinBox2"/>
            <TextView
                style="@style/pinbox_password"
                android:id="@+id/pinBox3"
                />

            <TextView
                style="@style/pinbox_password"
                android:id="@+id/pinBox4"
                />

            <TextView
                android:id="@+id/pinBox5"
                style="@style/pinbox_password" />
        </LinearLayout>
        <TextView
            android:id="@+id/statusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:padding="5dip"
            android:layout_weight="1.05" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/numericPad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:shrinkColumns="*"
            android:stretchColumns="*" >
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    style="@style/btn_number"
                    android:id="@+id/btn1"
                    android:text="1"
                    >
                </Button>
                <Button
                    style="@style/btn_number"
                    android:id="@+id/btn2"
                    android:text="2"
                    >
                </Button>
                <Button
                    style="@style/btn_number"
                    android:id="@+id/btn3"
                    android:text="3"
                    >
                </Button>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    style="@style/btn_number"
                    android:id="@+id/btn4"
                    android:text="4"
                    android:background="@drawable/button_gradient_selector"
                    >
                </Button>
                <Button
                    android:id="@+id/btn5"
                    style="@style/btn_number"
                    android:text="5"

                    >
                </Button>
                <Button
                    android:id="@+id/btn6"
                    style="@style/btn_number"
                    android:text="6"
                    >
                </Button>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btn7"
                    style="@style/btn_number"
                    android:text="7"

                    >
                </Button>
                <Button
                    android:id="@+id/btn8"
                    style="@style/btn_number"
                    android:text="8"
                    >
                </Button>
                <Button
                    android:id="@+id/btn9"
                    style="@style/btn_number"
                    android:text="9"
                    >
                </Button>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    style="@style/btn_number"
                    android:id="@+id/btnExit"
                    android:text="Exit"
                    >
                </Button>
                <Button
                    android:id="@+id/btn0"
                    style="@style/btn_number"
                    android:text="0"
                    >
                </Button>
                <Button
                    style="@style/btn_number"
                    android:id="@+id/btnDelete"
                    android:text="Del"
                    >
                </Button>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>